<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/style.css">



    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>


            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1" style="color: black;"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="/images/banner-1.jpg" alt="New york" class="w-100">
                        <div class="carousel-item">
                            <div class="carousel-caption">
                                <h2 class="car-title "><span class="text-emph">GET</span> THE LOOK</h2>
                                <p class="car-parag ">Surf our collection to find the best and latest fashion, filled with the best quality.
                                </p>

                                <a class="button-big  car-btn" href="/products">VISIT STORE</a>


                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <img src="/images/banner-2.jpg" alt="Chicago" style="width:100%;">
                        <div class="carousel-item">
                            <div class="carousel-caption">
                                <h2 class="car-title "><span class="text-emph">SAVE</span> MONEY</h2>
                                <p class="car-parag ">Sales are always on in our store, so save up, and surf our on going sales.
                                </p>
                                <a href="/products" class="button-big car-btn">VISIT SALES</a>
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <img src="/images/banner-3.jpg" alt="Chicago" style="width:100%;">
                        <div class="carousel-item">
                            <div class="carousel-caption">
                                <h2 class="car-title "><span class="text-emph">GET</span> THE LOOK</h2>
                                <p class="car-parag ">Surf our collection to find the best and latest fashion, filled with the best quality.
                                </p>
                                <a class="button-big  car-btn" href="/products">VISIT STORE </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>


            <div class="section">
                <h1 class="car-title" style="-webkit-text-stroke: 0ch;"><span class="text-emph" style="-webkit-text-stroke: 0ch;">Featured</span> Products</h1>

                <div class="cart-container">
                    <% if (prods.length > 0) { %>
                        <div class="row">
                            <% for (var i=0; i<=2 ;i++) { %>
                                <form action="/cart" method="POST">
                                    <article class="cart col-lg-3 col-md-4 col-sm-4" style="width: 28%;">
                                        <header>
                                            <h1>
                                                <%= prods[i].title %>
                                            </h1>
                                        </header>
                                        <div>
                                            <img src="<%= prods[i].image %>" alt="A Book">
                                        </div>
                                        <div>
                                            <h2>
                                                <%= prods[i].price %>
                                            </h2>
                                            <p>
                                                <%= prods[i].desc %>
                                            </p>
                                        </div>
                                        <div>
                                            <input type="hidden" name="productId" value="<%= prods[i].id %>">

                                            <button type="submit" class="primary-btn">Add to cart</button>

                                            <a href="/products/<%= prods[i].id %>" class="primary-btn">Details</a>

                                        </div>
                                    </article>
                                </form>
                                <% } %>
                        </div>
                        <% } %>
                </div>
            </div>
            <div class="section">
                <h1 class="car-title" style="-webkit-text-stroke: 0ch;"><span class="text-emph" style="-webkit-text-stroke: 0ch;">SHOP</span> Our Categories</h1>
                <div class="card" style="border: none;">
                    <div class="overlayed">
                        <img src="/images/cat-women.jpg" class="card-img-top" alt="...">
                        <div class="overlay">
                            <h5 class="overlay-text">WOMEN</h5>
                        </div>
                    </div>
                </div>
                <div class="card" style="border: none;">
                    <div class="overlayed">
                        <img src="/images/cat-men.jpg" class="card-img-top" alt="...">
                        <div class="overlay">
                            <h5 class="overlay-text">MEN</h5>
                        </div>
                    </div>
                </div>
                <div class="card" style="border: none;">
                    <div class="overlayed">
                        <img src="/images/cat-kids.jpg" class="card-img-top" alt="...">
                        <div class="overlay">
                            <h5 class="overlay-text">KIDS</h5>
                        </div>
                    </div>
                </div>
                <div class="card" style="border: none;">
                    <div class="overlayed">
                        <img src="/images/cat-acces.jpg" class="card-img-top" alt="...">
                        <div class="overlay">
                            <h5 class="overlay-text" style="left: 15%; font-size: 40px">ACCESSORIES</h5>
                        </div>
                    </div>
                </div>


            </div>

            <%- include('../includes/footer.ejs') %>

                <%- include('../includes/end.ejs') %>
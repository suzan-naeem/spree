<%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="../css/styles.css">

    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main style="margin-top: 150px;">
                <div class="titles">
                    <h2>My <span>Wishlist</span> </h2>
                </div>
                <div class="cart-container">
                    <% if (prods.length > 0) { %>
                        <div class="row">
                            <% for (let product of prods) { %>

                                <form action="/cart" method="POST">
                                    <article class="cart col-lg-3 col-md-4 col-sm-4">
                                        <header>
                                            <h1>
                                                <%= product.title %>

                                            </h1>
                                        </header>
                                        <div>
                                            <img src="<%= product.image %>" alt="A Book">
                                        </div>
                                        <div>
                                            <h2>
                                                Price:
                                                <%= product.price %>

                                            </h2>
                                            <p>
                                                <%= product.desc %>
                                            </p>
                                        </div>
                                        <div>
                                            <button type="submit" class="primary-btn">Add to <i
                                            class="fas fa-shopping-cart"></i></button>
                                            <a class="primary-btn">Details</a>
                                        </div>
                                        <button class="primary-btn"><i class="fas fa-times"></i> Remove From Wishlist</button>
                                    </article>
                                </form>
                                <% } %>
                        </div>
                </div>
                <% } else { %>
                    <h1>Add products to your wishlist</h1>
                    <% } %>

            </main>



            <%- include('../includes/end.ejs') %>